VertexLitGeneric {
	$basetexture "models/bots/soldier/golibody"

	$bumpmap "models/bots/soldier/golinormal"

	$detail            "effects/tiledfire/firelayeredslowtiled512"
	$detailscale       5
	$detailblendfactor 0
	$detailblendmode   6

	$phong              1
	$phongexponent      10
	$phongboost         4
	$phongfresnelranges	"[.5 .7 1]"
	$halflambert        0

	$lightwarptexture "models/lightwarps/robot_lightwarp"

	$rimlight         1
	$rimlightexponent 1
	$rimlightboost    2
	$rimmask          1

	$yellow 0

	// Cloaking
	$cloakPassEnabled 1

	Proxies {
		spy_invis {}

		AnimatedTexture {
			animatedtexturevar         $detail
			animatedtextureframenumvar $detailframe
			animatedtextureframerate   30
		}

		BurnLevel {
			resultVar $detailblendfactor
		}

		YellowLevel {
			resultVar $yellow
		}

		Equals {
			srcVar1   $yellow
			resultVar $color2
		}

	}
}
