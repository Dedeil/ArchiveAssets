VertexLitGeneric {
	$basetexture "models/bots/saxtronv2/saxtron_buckle"

	$detail            "effects/tiledfire/firelayeredslowtiled512"
	$detailscale       5
	$detailblendfactor 0
	$detailblendmode   6

	>=DX90 {
		$envmap     env_cubemap
		$envmaptint "[.1 .1 .1]"
	}

	$phong              1
	$basephongboost     5
	$phongexponent      35
	$phongboost         1
	$phongfresnelranges	"[1 1 1]"
	
	$lightwarptexture "models/lightwarps/robot_lightwarp"

	$rimlight         1
	$rimlightexponent 25
	$rimlightboost    2

	// Cloaking
	$cloakPassEnabled 1

	Proxies {
		// Team-colored cloak
		spy_invis {}

		// Burning
		AnimatedTexture {
			animatedtexturevar         $detail
			animatedtextureframenumvar $detailframe
			animatedtextureframerate   30
		}

		BurnLevel {
			resultVar $detailblendfactor
		}

		// Jarate
		YellowLevel {
			resultVar $color2
		}
	}
}