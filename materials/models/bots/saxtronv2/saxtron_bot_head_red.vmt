VertexLitGeneric {
	$basetexture "models/bots/saxtronv2/saxtron_bot_head_red"

	$detail            "effects/tiledfire/firelayeredslowtiled512"	
	$detailscale       5
	$detailblendfactor 0
	$detailblendmode   6

	$phong              1
	$phongboost	        0
	$phongexponent      40
	$phongfresnelranges "[.5 1 2]"
	$halflambert        0

	$lightwarptexture "models/lightwarps/robot_lightwarp"

	$rimlight         1
	$rimlightexponent 1
	$rimlightboost    2

	>=DX90 {
		$selfillum 1
	}

	// Cloaking
	$cloakPassEnabled 1

	Proxies {
		// Team-colored cloak
		spy_invis {}

		// Burning
		AnimatedTexture {
			animatedtexturevar         $detail
			animatedtextureframenumvar $detailframe
			animatedtextureframerate   30
		}

		BurnLevel {
			resultVar $detailblendfactor
		}

		// Jarate
		YellowLevel {
			resultVar $color2
		}
	}
}
