VertexlitGeneric {
	$basetexture "models/weapons/c_items/c_lead_blaster"

	$phong                 1
	$phongboost            8	
	$phongexponent         15
	$phongfresnelranges    "[.25 .5 1]"
	$basemapalphaphongmask 1

	$lightwarptexture "models\lightwarps\weapon_lightwarp"

	$rimlight         1
	$rimlightexponent 10
	$rimlightboost    1.5

	// Cloaking
	$cloakPassEnabled 1

	// Killstreak
	$sheenPassEnabled  1
	$sheenmap          "cubemaps/cubemap_sheen001"
	$sheenmapmask      "effects/animatedsheen/animatedsheen0"
	$sheenmaptint      "[1 1 1]"
	$sheenmapmaskframe 0
	$sheenindex        0

	// Crits
	$glowcolor "[1 1 1]"

	// Jarate
	$yellow "[1 1 1]"

	Proxies {
		// Cloaking
		invis {}

		// Killstreak
		AnimatedWeaponSheen {
			animatedtexturevar         $sheenmapmask
			animatedtextureframenumvar $sheenmapmaskframe
			animatedtextureframerate   40
		}

		// Crits
		ModelGlowColor {
			resultVar $glowcolor
		}

		Equals {
			srcVar1   $glowcolor
			resultVar $selfillumtint
		}

		// Jarate
		YellowLevel {
			resultVar $yellow
		}

		// Crit or Jarate
		Multiply {
			srcVar1   $glowcolor
			srcVar2   $yellow
			resultVar $color2
		}
	}
}
