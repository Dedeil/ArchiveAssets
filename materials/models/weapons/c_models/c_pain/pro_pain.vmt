VertexlitGeneric {
	$baseTexture "models/weapons/c_models/c_pain/pain"

	$phong                 1
	$phongboost            1.9
	$phongexponent         8
	$phongfresnelranges    "[.75 .5 3]"
	$basemapalphaphongmask 1

	$lightwarptexture "models/player/pyro/pyro_lightwarp"

	$rimlight         1
	$rimlightexponent 20
	$rimlightboost    .5

	// Cloaking
	$cloakPassEnabled 1

	// Killstreak
	$sheenPassEnabled  1
	$sheenmap          "cubemaps/cubemap_sheen001"
	$sheenmapmask      "effects/animatedsheen/animatedsheen0"
	$sheenmaptint      "[1 1 1]"
	$sheenmapmaskframe 0
	$sheenindex        0

	// Crits
	$glowcolor "[1 1 1]"

	// Jarate
	$yellow "[1 1 1]"

	Proxies {
		// Cloaking
		invis {}

		// Killstreak
		AnimatedWeaponSheen {
			animatedtexturevar         $sheenmapmask
			animatedtextureframenumvar $sheenmapmaskframe
			animatedtextureframerate   40
		}

		// Crits
		ModelGlowColor {
			resultVar $glowcolor
		}

		Equals {
			srcVar1   $glowcolor
			resultVar $selfillumtint
		}

		// Jarate
		YellowLevel {
			resultVar $yellow
		}

		// Crit or Jarate
		Multiply {
			srcVar1   $glowcolor
			srcVar2   $yellow
			resultVar $color2
		}
	}
}
