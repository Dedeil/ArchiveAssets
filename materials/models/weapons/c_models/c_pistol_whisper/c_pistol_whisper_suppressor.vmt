VertexLitGeneric {
	$basetexture "models/weapons/c_models/c_pistol_whisper/c_pistol_whisper_suppressor"

	$bumpmap "models/weapons/c_models/c_pistol_whisper/c_pistol_whisper_suppressor_normal"

	$phong 1
	$phongboost 7
	// Commented out to use the exponent mask
	//$phongexponent 255
	// Scales up the exponent texture which usually only has about 120 levels of exponent
	$phongexponentfactor  255
	$phongexponenttexture "models/weapons/c_models/c_pistol_whisper/c_pistol_whisper_suppressor_exp"
	$phongfresnelranges "[.3 .5 3]"
	$basemapalphaphongmask 1
	$phongalbedotint 1

	$lightwarptexture "models/lightwarps/softened_weapon_lightwarp"

	$envmap env_cubemap
	$envmaptint "[.04 .04 .04]"
	// Overriden by $basemapalphaphongmask
	//$normalmapalphaenvmapmask 1

	$rimlight 1
	$rimlightexponent 2
	$rimlightboost 2.5

	// Cloaking
	$cloakPassEnabled 1

	// Killstreak
	$sheenPassEnabled  1
	$sheenmap          "cubemaps/cubemap_sheen001"
	$sheenmapmask      "effects/animatedsheen/animatedsheen0"
	$sheenmaptint      "[1 1 1]"
	$sheenmapmaskframe 0
	$sheenindex        0

	// Crits
	$glowcolor "[1 1 1]"

	// Jarate
	$yellow "[1 1 1]"

	Proxies {
		// Cloaking
		invis {}

		// Killstreak
		AnimatedWeaponSheen {
			animatedtexturevar         $sheenmapmask
			animatedtextureframenumvar $sheenmapmaskframe
			animatedtextureframerate   40
		}

		// Crits
		ModelGlowColor {
			resultVar $glowcolor
		}

		Equals {
			srcVar1   $glowcolor
			resultVar $selfillumtint
		}

		// Jarate
		YellowLevel {
			resultVar $yellow
		}

		// Crit or Jarate
		Multiply {
			srcVar1   $glowcolor
			srcVar2   $yellow
			resultVar $color2
		}
	}
}
